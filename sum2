public int sum2(int[] nums) {
  if(nums.length > 2){
    int sum = nums[0] + nums[1];
    return sum;
  }
  else if(nums.length != 0 && nums.length <= 2){
    int sum = 0;
    if(nums.length == 2){
      sum = nums[0] + nums[1];
    }
    else{
      sum = nums[0];
    }
    return sum;
  }
  return 0;
}
