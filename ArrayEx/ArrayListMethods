package ArrayEx;

import java.util.ArrayList;

public class ArrayListMethods {

    public static void main(String[] args) {
        ArrayList<String> toDoList = new ArrayList<String>();
        String toDo1 = "Water plants";
        // Add more to-dos here:
        String toDo2 = "eat";
        String toDo3 = "sleep";
        String toDo4 = "walk";

        // Add to-dos to toDoList
        toDoList.add(toDo1);
        toDoList.add(toDo2);
        toDoList.add(toDo3);
        toDoList.add(toDo4);

        System.out.println(toDoList);

        // .size() method is printing out the list size or length
        System.out.println(toDoList.size());

        // .get() method is getting the index value of the the list for ArrayList !!
        System.out.println(toDoList.get(1));

        // .set() method is updating the value of the list
        System.out.println(toDoList.set(0, "cleaning")); // this would print out what the old value is at index 0
        System.out.println(toDoList); // this would print out the new list with the new value updated

        // .remove() method can remove the index or value of the list
        toDoList.remove(0);
        toDoList.remove("sleep");
        System.out.println(toDoList);

        // .indexOf() method is use to find the index
        System.out.println(toDoList.indexOf("walk"));
    }
}
