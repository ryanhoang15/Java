public int count7(int n) {
  // int count = 0;
  
  if(n == 0){
    return 0;
  }
  
  else if(n == 7){
    return 1;
  }

  else{
    if(n % 10 == 7){
      return count7(n / 10) + 1;
    }
    else{
      return count7(n/10);
    }
    // return count7(n / 10) + (n%10) / 10;
    // if(n % 10 == 7){
    //   return count7(n / 10);
    // }
    // else{
    //   return count7(n - 1);
    // }
  }

}
